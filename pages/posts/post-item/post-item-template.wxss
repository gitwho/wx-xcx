.post-container{
  display: flex;
  flex-direction: column;
}
.author{
  margin: 10px 0 10px 20rpx;
}
.avatarImg{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.time{
  margin-left: 40rpx;
  font-size: 18px;
}
.list_img{
  width: 100%;
  height: 340rpx;
}
.pageContent{
  margin-left: 10rpx;
  margin-right: 10rpx;
  font-size: 18px;
}

.like{
  display: flex;
  flex-direction: row;
  font-size:14px;
  margin-left: 20rpx;
}
.star, .comment{
  width: 20px;
  height: 20px;
}
.comment{
  margin-left: 40rpx;
}
